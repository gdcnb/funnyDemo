/* 清除浮动 */
.clearfix
  &:before,
  &:after
    content " "
    display table
  &:after
    clear both

/* 行列基本布局 --begin */
.row
  box-sizing border-box
  @extend .clearfix
  *
  box-sizing border-box

.column1
