  width 60%

/* 行列基本布局 --end */

/* 组件间隔样式 */
.unit-mg {
  margin-top 5px
  margin-bottom 5px
}

.line-between
  position relative
  &:after
    content ''
    display block
    position absolute
    width 1px
    height 14px
    background-color #F5F5F5
    right 0
    top 50%
    margin-top -7px

/* title */
.title-theme
  position relative
  padding-left 16px
  height 33px
  line-height 34px
  .title-icon
    display block
    position absolute
    left 10px
    top 50%
    margin-top -7px
    width 2px
    height 14px
  .subtitle-icon
    display block
    position absolute
    left 10px
    top 50%
    margin-top -1.5px
    width 3px
    height 3px
    border-radius 3px

.more-navi
  display inline-block
  position absolute
  top 0
  right 12px
  color #999999
  font-size 11px
  line-height 33px
  .more-navi-arrow
    display inline-block
    width 8px
    height 8px
    border-top 1px solid #969696
    border-right 1px solid #969696
    transform rotate(45deg)

/* title --end*/
.com-bgtxt
  background: -moz-linear-gradient(top,  rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.5))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%); /* Chrome10+,Safari5.1+ */
